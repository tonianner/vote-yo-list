<form class="col-lg-6 input-group" ng-submit="addLocation()">
  <input type="text"
         class="form-control add-location-tab-input"
         placeholder="Add Location in Event: '{{ selectedEvent.title }}'"
         ng-model="newPlace.place_name"
         name="newPlace[place_name]"
         style="color: green;">
  <span class="input-group-btn">
  <button class="btn btn-success" type="submit">Add Location!</button>
  </span>
</form><!-- /input-group -->
<br>

<!-- 2 Divs side by side -->
<div class="col-md-8">
  <table class="table table-bordered table-hover table-condensed" class="text-center">
    <thead>
      <tr class="text-center">
        <th style="width:20%;"> Number of votes </th>
        <th>
          <a href="" ng-click="sortField ='location'; reverse = !reverse"> Location </a>
        </th>
        <th style="width:5%">Delete</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="place in allLocations  | filter:query | orderBy:sortField:reverse" class="text-center">
        <td>
          {{place.votes}}
        </td>
        <td>
          <p>{{ place.place_name }}</p>
          <i title="Up Votes"
             ng-click="upVote($index)"
             class="fa fa-thumbs-o-up fa-2x vote-icons-up"
             style='cursor:pointer'></i>
          <i title="Down Votes"
             ng-click="downVote($index)"
             class="fa fa-thumbs-o-down fa-2x vote-icons-down"
             style='cursor:pointer'></i>
        </td>
        <td>
          <button class="btn btn-warning" ng-click="deleteLocation(place.id)">Delete</button>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<div class="col-md-4">
  <div class="panel panel-success">
    <div class="panel-heading">Highest Votes</div>
    <div class="panel-body" ng-repeat="msg in maxVotes()">
      {{ msg.place_name }}: <strong> with {{ msg.votes }} votes</strong>
    </div>
  </div>
</div>
