app.controller('LogInCtrl', [
  '$scope', '$auth', '$location', '$rootScope',
    function($scope, $auth, $location, $rootScope){
      console.log('LogInCtrl')

      $scope.login = function () {
        $auth.submitLogin($scope.loginForm).
         then(function(resp) {
           // redirect back to root when registration succesfull
           $location.path('/events');
         }).
         catch(function(resp) {
          console.log(resp.data.errors.full_messages);
          $scope.errorMessageLogIn = resp.data.errors.full_messages;
         });
      };
    }
])
