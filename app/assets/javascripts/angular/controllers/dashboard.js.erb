app.controller('DashBoardCtrl', ['$scope', '$http',
  function($scope, $http){
    console.log('DashBoardCtrl')

    $scope.newEvent = {};
    $scope.addEvent = addEvent;
    $scope.eventList = [];


    getEvents();
    function getEvents(){
      $http
        .get('http://localhost:3000/api/events')
        .success(function(data){
          $scope.eventList = data
          // console.log(data)
        })
    }

    function addEvent(){
      $http
        .post('http://localhost:3000/api/events', $scope.newEvent)
        .success(function(data){
          getEvents();
        })

      $scope.newEvent = {};
    }
}])
